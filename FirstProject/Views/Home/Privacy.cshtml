@model FirstProject.Models.ContactViewModel
@{
    ViewData["Title"] = "Privacy Policy";
}
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap-grid.css" rel="stylesheet" />
}
<div class="col-md-6 col-md-offset-3">
    <div class="form-group">
        <label>Send Mail</label>

    </div>
    <form method="post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" name="Name" value="" class="form-control" />
            <span asp-validation-for="Name" class="text-warning"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input type="text" name="Email" value="" class="form-control" />
            <span asp-validation-for="Email" class="text-warning"></span>
        </div>
        <div class="form-group">
            <label asp-for="Message">Message</label>
            <input type="text" name="Message" value="" class="form-control" />
            <span asp-validation-for="Message" class="text-warning"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Send" class="btn btn-success" />
        </div>
        <div>@ViewBag.UserMessage</div>

    </form>
</div>
